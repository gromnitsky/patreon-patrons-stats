{
    "manifest_version": 2,
    "name": "patreon-patrons-stats",
    "description": "Display a public patrons statistics for a patreon page.",
    "version": "0.0.1",
    "content_scripts": [{
        "matches": ["https://*.patreon.com/*", "http://127.0.0.1/*"],
        "js": ["content_script.js"],
        "run_at": "document_end"
    }],
    "page_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["event_page.js"]
    }
}
